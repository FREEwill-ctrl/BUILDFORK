<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:id="@+id/item_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16.0dip"
    android:layout_marginTop="8.0dip"
    android:layout_marginRight="16.0dip"
    android:layout_marginBottom="8.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/uwu_bg_card"
        app:cardCornerRadius="24.0dip"
        app:cardElevation="0.0dip">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/info_container"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:selectableItemBackground">
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_indicator"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:nextFocusRight="@+id/layout_share"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="12.0dip"
                            android:paddingTop="8.0dip"
                            android:paddingBottom="8.0dip"
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0">
                            <TextView
                                android:textSize="17.0sp"
                                android:textColor="?android:textColorPrimary"
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:minLines="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/layout_edit"
                            android:background="?android:selectableItemBackground"
                            android:padding="12.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/png_height"
                                android:src="@drawable/ic_edit_24dp"
                                app:tint="?android:textColorPrimary" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/layout_share"
                            android:background="?android:selectableItemBackground"
                            android:padding="12.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/png_height"
                                android:layout_height="@dimen/png_height"
                                android:src="@drawable/ic_share_24dp"
                                app:tint="?android:textColorPrimary" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:id="@+id/layout_remove"
                            android:background="?android:selectableItemBackground"
                            android:padding="12.0dip"
                            android:focusable="true"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="@dimen/png_height"
                                android:layout_height="@dimen/png_height"
                                android:src="@drawable/uwu_ic_delete_24dp"
                                app:tint="?android:textColorPrimary" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12.0dip"
                        android:paddingEnd="12.0dip">
                        <TextView
                            android:textSize="14.0sp"
                            android:textColor="?android:textColorSecondary"
                            android:id="@+id/tv_statistics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:minLines="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="0.0dip"
                        android:paddingEnd="16.0dip">
                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />
                        <TextView
                            android:textSize="12.0sp"
                            android:textColor="?android:textColorSecondary"
                            android:id="@+id/tv_subscription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingBottom="12.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="12.0dip"
                        android:paddingEnd="16.0dip">
                        <TextView
                            android:textSize="14.0sp"
                            android:textColor="?attr/colorThemeUwu"
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0" />
                        <TextView
                            android:textSize="14.0sp"
                            android:textColor="@color/colorPing"
                            android:id="@+id/tv_test_result"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4.0dip" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>